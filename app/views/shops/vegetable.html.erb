<body id = shops_list>
  <% if @shops&.any? %>
    <div class="pagination">
      <%= paginate @shops %>
    </div>
    <div id ="shops">
      <%= render 'shops/shops', shops: @shops %>
    </div>
  <% end %>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/3.3.0/masonry.pkgd.js"></script>
  <script>
    window.onload = function() {
      new Masonry('body', {
        itemSelector: '.shop',
        gutter: 4
      });
    };
  </script>
</body>