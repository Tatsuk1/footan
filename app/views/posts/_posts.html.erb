<div class="flex-container">
  <% if posts.count > 0 %>
    <% posts.each do |post| %>
      <% if post.image? %>
        <div class="food, flex-item">
          <%= link_to post do %>
            <%= image_tag post.image.url %>
          <% end %>
          <%# if current_page?(likes_user_path(@user)) %>
            <br><%= link_to post.user.name, user_path(post.user) %>
          <%# end %>
        </div><br>
      <% end %>
    <% end %>
  <% else %>
    <div class="no_post">
      <h2>投稿がありません</h2>
    </div>
  <% end %>
</div>
