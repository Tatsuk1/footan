<% if logged_in? %>
  <%= link_to '戻る', shop_path(@shop), class: 'btn btn-success'%>
  <div class="row post_new">
    
    <%= form_with(model: [@shop,@post], local: true) do |f| %>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>    
      <div>
        <p>店舗名</p>
        <p><%= @shop.name %></p>
      </div>
      <div class="form-group">
        <%= f.label :title, '料理名' %>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, 'コメント' %>
        <%= f.text_area :content , class:"form-control", rows: 3 %>
      </div>
      
      <%= f.submit '投稿' , class: 'btn btn-primary post-button' %>
    <% end %>
  </div>
<% else %>
  <% redirect_to login_path %>
<% end %>